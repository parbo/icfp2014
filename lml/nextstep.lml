(letrec (nextstep)
         ((lambda (pos dir)
            (let (x y) ((car pos) (cdr pos))
              (if (eq dir 0)
                (tuple x (- y 1))
                (if (eq dir 1)
                   (tuple (+ x 1) y)
                   (if (eq dir 2)
                      (tuple x (+ y 1))
					  (tuple (- x 1) y)))))))
  (nextstep (tuple 2 3) 0))